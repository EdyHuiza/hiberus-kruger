<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hiberuskrugerapp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="textViewStyleTitle">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/font_title</item>
    </style>

    <style name="textViewStyleSubtitle">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/font_subtitle</item>
    </style>

    <style name="textViewStyleDetail">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/font_detail</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">@color/primaryButtonTextColor</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="cornerRadius">5dp</item>
    </style>

</resources>